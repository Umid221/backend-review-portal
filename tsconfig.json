{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@middleware/*": ["middleware/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src", "config"]
}
